# Docker Compose Configuration
# Use docker-compose.local.yml for development or docker-compose.production.yml for production
COMPOSE_FILE=docker-compose.local.yml

# FastAPI Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# LLM Model Configuration (litellm)
# See litellm docs for full list: https://docs.litellm.ai/docs/providers
MODEL=gpt-5-nano
SYNTHESIS_MODEL=gpt-4o-mini

# Extended Thinking Mode (for Claude models only)
# Supported models: claude-sonnet-4-5-20250929, claude-opus-4-5-20251101, claude-haiku-4-5-20251001
# To use: Set MODEL to a supported Claude model and ENABLE_THINKING=True
ENABLE_THINKING=False
THINKING_BUDGET_TOKENS=10000
SHOW_THINKING=True

# PostgreSQL Database (required)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_DB=chatbot
POSTGRES_PASSWORD=your-secure-password-here
