# Docker Compose Configuration
# Use docker-compose.local.yml for development or docker-compose.production.yml for production
COMPOSE_FILE=docker-compose.local.yml

# FastAPI Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# LLM Model Configuration (litellm)
# See litellm docs for full list: https://docs.litellm.ai/docs/providers
# MODEL: Used for tool calling (search decision)
# SYNTHESIS_MODEL: Used for result synthesis (supports extended thinking)
MODEL=claude-sonnet-4-5
SYNTHESIS_MODEL=claude-sonnet-4-5

# Extended Thinking Mode (for Claude models only)
# Supported models: claude-sonnet-4-5, claude-opus-4-5
# Thinking is only used in SYNTHESIS_MODEL (no conflict with tools)
ENABLE_THINKING=False
THINKING_BUDGET_TOKENS=10000
SHOW_THINKING=True

# PostgreSQL Database (required)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_DB=chatbot
POSTGRES_PASSWORD=your-secure-password-here

# DrugCentral Database (required)
# Download database: just setup-drugcentral
DRUGCENTRAL_HOST=drugcentral_db
DRUGCENTRAL_PORT=5432
DRUGCENTRAL_USER=postgres
DRUGCENTRAL_DB=drugcentral
DRUGCENTRAL_PASSWORD=your-secure-password-here
